{
  "name": "stock-monitor-desktop",
  "version": "1.0.0",
  "description": "Stock Monitor Desktop - Track Amazon and Walmart product prices",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-frontend": "node ../scripts/copy-frontend.mjs",
    "build-all": "npm run build-frontend && npm run build",
    "postinstall": "electron-builder install-app-deps",
    "test-electron": "electron --version",
    "clean": "rm -rf dist node_modules/.cache 2>/dev/null || rmdir /s /q dist node_modules\\.cache 2>nul || echo 'Clean completed'"
  },
  "build": {
    "appId": "com.stockmonitor.app",
    "productName": "Stock Monitor",
    "copyright": "Made by one person who cares",
    "electronVersion": "38.1.0",
    "directories": {
      "buildResources": "res",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "desktop-database.js",
      "keychain-service.js",
      "server/**/*",
      "frontend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [],
      "icon": "res/icon.ico"
    },
    "publish": false
  },
  "dependencies": {
    "express": "^4.21.2",
    "axios": "^1.12.1",
    "cheerio": "^1.1.2",
    "node-cron": "^4.2.1",
    "get-port": "^7.1.0",
    "wait-port": "^1.1.0",
    "better-sqlite3": "^12.2.0",
    "electron-updater": "^6.3.4",
    "keytar": "^7.9.0",
    "electron-log": "^5.4.3"
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12"
  },
  "repository": {
    "type": "git",
    "url": "YOUR_REPOSITORY_URL"
  },
  "author": "Made by one person who cares",
  "license": "ISC"
}